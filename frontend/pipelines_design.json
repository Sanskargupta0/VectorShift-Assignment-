{
  "designSystem": {
    "name": "ClarityCanvas",
    "version": "1.0",
    "description": "A clean, minimalist, and functional design system for professional web applications and developer tools. It prioritizes clarity, structure, and ease of use with a light-themed, spacious layout."
  },
  "style": {
    "theme": "light",
    "aesthetic": ["minimalist", "professional", "SaaS", "functional", "clean"],
    "keyPrinciples": [
      "Generous use of whitespace to reduce cognitive load.",
      "Clear visual hierarchy through typography and subtle color variations.",
      "Depth is created using thin borders and soft, subtle drop shadows, not heavy gradients.",
      "Function over form, with a focus on usability and readability."
    ],
    "effects": {
      "boxShadow": {
        "description": "A subtle shadow used to lift interactive nodes and floating elements from the canvas.",
        "cssImplementation": "box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.08);"
      }
    }
  },
  "colors": {
    "palette": {
      "background": {
        "primary": { "value": "#FFFFFF", "description": "Primary background for components like cards and headers." },
        "secondary": { "value": "#F9FAFB", "description": "Slightly off-white canvas/body background." }
      },
      "text": {
        "primary": { "value": "#111827", "description": "For headings and primary content." },
        "secondary": { "value": "#6B7280", "description": "For sub-text, descriptions, and inactive elements." },
        "placeholder": { "value": "#9CA3AF", "description": "For placeholder text in input fields." }
      },
      "accent": {
        "primary": { "value": "#4F46E5", "description": "Vibrant indigo/blue for primary buttons, active states, and links." },
        "secondary": { "value": "#7C3AED", "description": "Vibrant purple, used for special floating action buttons (e.g., AI assistant)." }
      },
      "status": {
        "success": { "value": "#10B981", "description": "Green for success indicators and 'saved' states." }
      },
      "stroke": {
        "default": { "value": "#E5E7EB", "description": "Default border color for cards, inputs, and dividers." },
        "interactive": { "value": "#D1D5DB", "description": "Slightly darker border for hover states." },
        "focus": { "value": "#4F46E5", "description": "Accent color border for focused inputs." }
      }
    }
  },
  "typography": {
    "fontFamily": {
      "primary": { "value": "'Inter', 'Segoe UI', sans-serif", "description": "Main font for all UI text, chosen for its high legibility." }
    },
    "scale": {
      "h1": { "fontSize": "20px", "fontWeight": 600 },
      "h2": { "fontSize": "16px", "fontWeight": 500 },
      "body": { "fontSize": "14px", "fontWeight": 400, "lineHeight": "1.5" },
      "label": { "fontSize": "12px", "fontWeight": 500 },
      "caption": { "fontSize": "12px", "fontWeight": 400, "color": "$colors.text.secondary" }
    }
  },
  "layout": {
    "grid": {
      "baseUnit": "4px",
      "description": "Spacing and sizing are based on a 4px grid system."
    },
    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px"
    },
    "borderRadius": {
      "small": "4px",
      "medium": "6px",
      "large": "8px",
      "circle": "50%"
    },
    "divider": {
      "color": "$colors.stroke.default",
      "height": "1px"
    }
  },
  "components": {
    "button": {
      "base": {
        "borderRadius": "$layout.borderRadius.medium",
        "padding": "8px 16px",
        "fontSize": "$typography.scale.body.fontSize",
        "fontWeight": 500,
        "transition": "background-color 0.2s ease"
      },
      "primary": {
        "background": "$colors.accent.primary",
        "color": "#FFFFFF",
        "border": "none",
        "hover": {
          "background": "#4338CA"
        }
      },
      "secondary": {
        "background": "$colors.background.primary",
        "color": "$colors.text.primary",
        "border": "1px solid $colors.stroke.interactive",
        "hover": {
          "background": "$colors.background.secondary"
        }
      },
      "tertiary": {
        "background": "transparent",
        "color": "$colors.text.secondary",
        "border": "none",
        "hover": {
          "background": "$colors.background.secondary",
          "color": "$colors.text.primary"
        }
      }
    },
    "canvasNode": {
      "background": "$colors.background.primary",
      "borderRadius": "$layout.borderRadius.large",
      "border": "1px solid $colors.stroke.default",
      "boxShadow": "$style.effects.boxShadow.cssImplementation",
      "header": {
        "padding": "8px 12px",
        "fontWeight": 500
      },
      "body": {
        "padding": "12px"
      }
    },
    "inputField": {
      "background": "$colors.background.primary",
      "color": "$colors.text.primary",
      "borderRadius": "$layout.borderRadius.medium",
      "border": "1px solid $colors.stroke.default",
      "padding": "8px 12px",
      "focus": {
        "border": "1px solid $colors.accent.primary",
        "boxShadow": "0 0 0 2px rgba(79, 70, 229, 0.2)"
      }
    },
    "tabs": {
      "base": {
        "padding": "8px 4px",
        "margin": "0 12px",
        "color": "$colors.text.secondary",
        "borderBottom": "2px solid transparent"
      },
      "active": {
        "color": "$colors.text.primary",
        "fontWeight": 500,
        "borderBottom": "2px solid $colors.accent.primary"
      }
    },
    "icon": {
      "style": "outline",
      "strokeWidth": "1.5px",
      "size": "20px",
      "color": "$colors.text.secondary"
    },
    "notificationBadge": {
      "base": {
        "display": "inline-flex",
        "alignItems": "center",
        "gap": "8px",
        "padding": "8px 12px",
        "borderRadius": "$layout.borderRadius.medium"
      },
      "success": {
        "background": "#F0FDF4",
        "color": "#166534"
      }
    }
  }
}